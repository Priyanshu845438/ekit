<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wallpap"
    tools:context=".Kissancenter">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select the Kissan center to get the location And Dial Up"
            android:textSize="20dp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"
            android:textStyle="bold"
            ></TextView>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerkloc"
            android:entries="@array/Kissan_Centers_loc"
            android:layout_gravity="center"
            android:layout_marginVertical="30dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select the Kissan center For Dial Up"
            android:textSize="20dp"
            android:fontFamily="sans-serif-condensed"
            android:visibility="gone"
            android:textStyle="bold"

            ></TextView>



        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerkdial"
            android:entries="@array/Kissan_Centers_dial"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginVertical="30dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginTop="400dp"
            android:text="PM Kissan Helpline DialUp"
            android:id="@+id/btnkhd"></Button>


    </LinearLayout>


